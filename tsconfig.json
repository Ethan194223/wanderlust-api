{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",

    "lib": ["ES2020", "DOM"],

    // "rootDir": "src",          // ‚Üê removed so tests outside /src are allowed
    "outDir": "dist",

    "strict": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    /* üëâ  Jest & Node types ‚Äì so TS knows about global `describe`, `it`, etc. */
    "types": ["node", "jest"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"              // tests folder stays included
  ]
}


