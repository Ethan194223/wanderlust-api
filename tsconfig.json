{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",

    "lib": ["ES2020", "DOM"],

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    /*
     * ðŸ‘‰  Jest & Node types â€“ so TS knows about global `describe`, `it`, etc.
     */
    "types": ["node", "jest"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  "include": ["src/**/*.ts", "tests/**/*.ts"]
}

